<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stats"><%= @user.following.size %></strong>
    <%= t ".following" %>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stats"><%= @user.followers.size %></strong>
    <%= t ".followers" %>
  </a>
</div>
